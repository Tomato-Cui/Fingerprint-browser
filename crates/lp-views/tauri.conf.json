{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "ads-hubstudio",
  "version": "0.1.0",
  "identifier": "com.ads-hubstudio.browser",
  "build": {
    "frontendDist": "../../frontend/dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "ads-hubstudio",
        "width": 1444,
        "minWidth": 1333,
        "height": 844,
        "minHeight": 799,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "contentProtected": false,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "offlineInstaller"
      },
      "wix": {
        "language": "zh-CN"
      }
    }
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "endpoints": ["https://github.com/liusnew/lpbrowser-release/releases/latest/download/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlFNUFGRjJCRDNEMTgwODkKUldTSmdOSFRLLzlhbmd4TUF0L1NHZmI2VWdSNzBpRTZBeU4vZVp6dEp0UTM5RllWUHorN1lKcWYK"
    }
  }
}
